<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="nbpx" version="2.5">
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<display-name>nbpx</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:applicationContext-*.xml</param-value>
	</context-param>
	<!-- <listener> <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class> 
		</listener> -->
	<!-- 用这个类来加载Spring配置文件，需要在非Action类中注入service时可用SystemApplicationContext类的getContext函数得到ApplicationContext -->
	<listener>
		<listener-class>com.nb.nbpx.common.MyContextLoaderListener</listener-class>
	</listener> 

	<servlet>
		<servlet-name>jsp</servlet-name>
		<servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
		<init-param>
			<param-name>compiler</param-name>
			<param-value>javac1.6</param-value>
		</init-param>
	</servlet>
	

	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<!--设置是否缓存GWT生成的HTML和JS文件 
	<filter>
		<filter-name>cacheFilter</filter-name>
		<filter-class>com.nb.nbpx.filter.CacheFilter</filter-class>
		<init-param>
			<param-name>flag</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>

		<filter-name>cacheFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>-->

	<!--判断session是否失效或者已登录 
	<filter>
		<filter-name>SessionCheckFilter</filter-name>
		<filter-class>com.nb.nbpx.filter.SessionFilter</filter-class>
		<init-param>
			<param-name>loginPage</param-name>
			<param-value>/nbpx/admin/login.jsp</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>SessionCheckFilter</filter-name> 
		<url-pattern>/admin/*</url-pattern> 
	</filter-mapping>
-->

	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	

	<filter>  
        <filter-name>UrlRewriteFilter</filter-name>  
        <filter-class>  
            <!-- org.tuckey.web.filters.urlrewrite.UrlRewriteFilter -->
            com.nb.nbpx.interceptor.Rewriter  
        </filter-class>
	</filter>  
	<filter-mapping>
	        <filter-name>UrlRewriteFilter</filter-name>  
	        <url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>  
		<url-pattern>/struts/*</url-pattern>
    	<url-pattern>*.jsp</url-pattern>
    	<url-pattern>*.action</url-pattern>
    	<dispatcher>FORWARD</dispatcher>
	    <dispatcher>REQUEST</dispatcher>
	    <dispatcher>INCLUDE</dispatcher>
	</filter-mapping>
	
	<!-- Spring 刷新Introspector防止内存泄露 -->
	<listener>
		<listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
	</listener>
	
	<!-- tempDir指定的目录中可能会随着时间推移出现很多后缀为"tmp"的垃圾文件，commons-fileupload提供了一个不错的解决方法，就是把下面的代码加入到web.xml中即可。-->
	<listener>
        <listener-class>
          org.apache.commons.fileupload.servlet.FileCleanerCleanup
        </listener-class>
	</listener>


	<!-- session超时定义,单位为分钟 -->
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>

</web-app>
