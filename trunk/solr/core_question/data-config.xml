<dataConfig>
  <dataSource type="JdbcDataSource" 
              driver="com.mysql.jdbc.Driver"
              url="jdbc:mysql://127.0.0.1:3306/nbpx" 
              user="root" 
              password="1234"/>
  <document>
    <entity name="questions"  transformer="HTMLStripTransformer"  
            query="select t.title, t.content, t.questionId from questions t;">
			<field name="content" column="content"  stripHTML="true" />
    </entity>
  </document>
</dataConfig>