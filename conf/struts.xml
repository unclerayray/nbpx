<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.multipart.saveDir" value="/areaImage"></constant>
	<constant name="struts.multipart.maxSize" value="1024000000" />

	<package name="MyRestDataSource" namespace="/struts" extends="json-default">
		<interceptors>
			<interceptor name="encoding"
				class="com.nb.nbpx.interceptor.EncodingInterceptor"></interceptor>
			<interceptor name="jsonBuilder"
				class="com.nb.nbpx.interceptor.JsonBuilderInterceptor" />
		</interceptors>

		<action name="*_*" class="{1}Action" method="{2}">
			<interceptor-ref name="encoding"></interceptor-ref>
			<interceptor-ref name="jsonBuilder"></interceptor-ref>
			<!-- <interceptor-ref name="jcaptchaValidation"></interceptor-ref> -->
			<interceptor-ref name="fileUpload">
				<param name="maximumSize">300*1024</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="success" type="stream"></result>
			<result name="failure" type="stream"></result>
			<result name="easyuiResult" type="json"></result>
			<result name="input">/{1}/input.jsp</result>
			<result name="error">/{1}/error.jsp</result>
			<result name="none">/{1}/none.jsp</result>
			<result name="relogin">/admin/login.jsp</result>
			<result name="index" type="redirect">/admin/index.html</result>
			<result name="{2}">/{1}/{2}.jsp</result>
			<result name="forwardJsp">/{1}/${forwardJsp}</result>
			<result name="json" type="json"></result>
			<result name="report">/report/{2}.jsp</result>
		</action>
	</package>
	
	
	<package name="MyFrontRestDataSource" namespace="/" extends="json-default">
		<interceptors>
			<interceptor name="encoding"
				class="com.nb.nbpx.interceptor.EncodingInterceptor"></interceptor>
			<interceptor name="jsonBuilder"
				class="com.nb.nbpx.interceptor.JsonBuilderInterceptor" />
		</interceptors>

		<action name="*_*" class="{1}Action" method="{2}">
			<interceptor-ref name="encoding"></interceptor-ref>
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="success" type="stream"></result>
			<result name="failure" type="stream"></result>
			<result name="easyuiResult" type="json"></result>
			<result name="input">/{1}/input.jsp</result>
			<result name="error">/{1}/error.jsp</result>
			<result name="none">/{1}/none.jsp</result>
			<result name="viewQuestion">/question.jsp?id=${id}</result>
		</action>
	</package>
	
	
	<package name="MyAdminRestDataSource" namespace="/admin" extends="json-default">
		<interceptors>
			<interceptor name="encoding"
				class="com.nb.nbpx.interceptor.EncodingInterceptor"></interceptor>
			<interceptor name="jsonBuilder"
				class="com.nb.nbpx.interceptor.JsonBuilderInterceptor" />
		</interceptors>

		<action name="*_*" class="{1}Action" method="{2}">
			<interceptor-ref name="encoding"></interceptor-ref>
			<interceptor-ref name="jsonBuilder"></interceptor-ref>
			<!-- <interceptor-ref name="jcaptchaValidation"></interceptor-ref> -->
			<interceptor-ref name="fileUpload">
				<param name="maximumSize">300*1024</param>
			</interceptor-ref>
			<interceptor-ref name="defaultStack"></interceptor-ref>
			<result name="relogin">/admin/login.jsp</result>
			<result name="index" type="redirect">/admin/index.jsp</result>
		</action>
	</package>

